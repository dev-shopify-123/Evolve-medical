<div class="page-width">
  <div class="header_content">
    <div class="left_content">
      {% if section.settings.heading != blank %}
        <h2 class="heading">{{ section.settings.heading }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="text">{{ section.settings.text }}</div>        
      {% endif %}
    </div>
    <div class="right_content">
      {% if section.settings.image != blank %}
        <img src="{{section.settings.image | img_url: '2000x'}}" alt="{{ section.settings.image.alt }}" load="lazy">
      {% endif %}
    </div>
  </div>
  <table> 
    <th>Physician</th>
    <th></th>
    <th>Name</th>
    <th>Address</th>
    <th>Telephone</th>
    <th>Website</th>
 
      {% for block in section.blocks %}
        <tr>
          <td>{{block.settings.physician}}</td>
          <td><a href="{{block.settings.btn_url}}" class="btn btn-primery">{{block.settings.btn_text}}</a></td>
          <td>{{block.settings.name}}</td>
          <td>{{block.settings.address}}</td>
          <td><a href="tel:{{block.settings.telephone}}">{{block.settings.telephone}}</a></td>
          <td><a href="{{block.settings.website_url}}">{{block.settings.website_title}}</a></td>
        </tr>
      {% endfor %}
   
  </table>
</div>
{% schema %}
  {
    "name": "Our Physician",
    "class": "our-physician",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "our physicians"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "physician",
        "settings": [
          {
            "type": "text",
            "id": "physician",
            "label": "Physician"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button Text",
            "default": "buy now"
          },
          {
            "type": "url",
            "id": "btn_url",
            "label": "Button Url"
          },
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "richtext",
            "id": "address",
            "label": "Address"
          },
          {
            "type": "text",
            "id": "telephone",
            "label": "Telephone"
          },
          {
            "type": "text",
            "id": "website_title",
            "label": "Website Title"
          },
          {
            "type": "url",
            "id": "website_url",
            "label": "Website Url"
          }
        ]
      }
    ]
    
  }
{% endschema %}

